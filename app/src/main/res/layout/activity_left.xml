<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.com.shoushi.LeftActivity"
    android:background="#FAFAFA"
    >

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        >

        <test.com.shoushi.view.CircleImageView
            android:id="@+id/img_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/img_yonghumr"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:id="@+id/left_name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="懒猫"

                />
            <TextView
                android:id="@+id/left_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15827707520"
                android:layout_marginTop="20dp"
                />


        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#979797"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防丢功能"
            android:background="@null"
            android:textColor="#747474"
            />

        <ImageView
            android:id="@+id/left_fangdiu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_kaiguan_guan"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/left_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人信息"
        android:layout_marginLeft="90dp"
        android:textColor="#747474"
        android:background="@null"
        />
    <Button
        android:id="@+id/left_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用说明"
        android:layout_marginLeft="90dp"
        android:background="@null"
        android:textColor="#747474"
        />

    <Button
        android:id="@+id/left_exit"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:layout_marginLeft="90dp"
        android:textColor="#747474"
        />



</LinearLayout>
